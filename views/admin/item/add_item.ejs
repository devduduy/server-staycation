<div
  class="tab-pane fade"
  id="add-item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4 mt-1">
    <div class="card-body">
      <form action="/admin/item" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="Enter title"
            required
          />
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            type="text"
            class="form-control"
            name="price"
            placeholder="Enter price"
            required
          />
        </div>
        <div class="form-group">
          <label for="city">City</label>
          <input
            type="text"
            class="form-control"
            name="city"
            placeholder="Enter city"
            required
          />
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <select name="categoryId" class="form-control">
            <option value="">--- Category ---</option>
            <% for ( let i = 0; i < category.length; i++ ) { %>
            <option value="<%= category[i].id %>"
              ><%= category[i].name %></option
            >
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input
            type="file"
            class="form-control"
            name="image"
            multiple
            required
          />
        </div>
        <div class="form-group">
          <label for="descriptionItem">Description</label>
          <textarea name="descriptionItem" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> Save
        </button>
      </form>
    </div>
  </div>
</div>
